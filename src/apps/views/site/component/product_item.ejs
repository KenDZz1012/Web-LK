    <a href="/site/product-<%=product.slug%>.<%=product.id%> ">
        <img src="/static/images/<%=product.thumbnail%>" class="card-img-top">
        <h4 class="card-title" ><a href="#"><%=product.name%></a></h4>
        <span class="card-text"><%=new Intl.NumberFormat("vi-VN",{style:"currency",currency:"VND",}).format(product.price)%></span> 
    </a>
</div>


