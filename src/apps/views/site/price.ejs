<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("layout/head.ejs", {title:"Danh sách sản phẩm"}) %>
    <link rel="stylesheet" href="/static/site/css/main.css">
    <link rel="stylesheet" href="/static/site/css/cate.css">
    <script src="/static/site/js/jquery-3.6.0.js"></script>
    <script src="/static/site/js/index.js"></script>
</head>

<body>

    <!-- header -->
    <div id="header">
        <%- include("layout/header.ejs") %>
        <%- include("layout/menu.ejs") %>
    </div>
    <!-- container -->
    <div id="container">
    <div class="container__hotdeal">
        <div class="container__hotdeal-header-text" style="margin-left:10px;">
            Trang Chủ // 
         </div>
        <div class="container__hotdeal-main">
            <%if(title == 'laptop') {%>
                <div class="option">
                    <div class="brand">
                        <div class="brand_title">Theo Hãng</div>
                            <div class="brand_list">
                            <%for(brand of brand_lap){%>
                                <div class="brand_item">
                                    <a href="/category-<%=category.slug%>.<%=category.id%>/brand.<%=brand.id%>" style="color:rgb(255, 255, 255) !important;">
                                        <%=brand.title%>
                                    </a>    
                                </div>
                            <%}%>
                        </div>
                    </div>
                    <div class="price">
                        <div class="price_title">Theo Giá</div>
                            <div class="price_list">
                            <%for(price of pri_lap){%>
                                <div class="price_item">
                                    <a href="/category-<%=category.slug%>.<%=category.id%>/price.<%=price.id%>" style="color:rgb(255, 255, 255) !important;">
                                        <%=price.title%>
                                    </a>    
                                </div>
                            <%}%>
                        </div>
                    </div>
                </div>
            <%}%>
            <div class="product-list card-deck">
                <%for(let product of products){%>
                    <%- include("component/product_item.ejs", {product: product})%>
                <%}%>
            </div>
        </div>
    </div>
    </div>
</div>
    <%- include("layout/footer.ejs") %>

    

</div>
</body>

</html>